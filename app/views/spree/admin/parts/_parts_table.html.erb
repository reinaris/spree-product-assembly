<% if parts.any? %>
  <table class="table">
    <thead>
    	<tr>
    	  <th><%= Spree.t(:sku) %></th>
    		<th><%= Spree.t(:name) %></th>
        <th><%= Spree.t(:in_stock) %></th>
    		<th><%= Spree.t(:options) %></th>
    		<th><%= Spree.t(:qty) %></th>
    		<th></th>
    	</tr>
    </thead>
    <tbody>
      <% parts.each do |part| %>
        <tr id="<%= dom_id(part, :sel)%>">
          <td><%= part.sku %></td>
          <td>
            <%= link_to part.product.try(:name), edit_admin_product_path(part.product) %>
          </td>
          <td>
            <%= part.in_stock? %>
          </td>
          <td><%= variant_options part %></td>
          <td><%= text_field_tag :count, @product.count_of(part), class: "form-control" %></td>
    	    <td class="actions">
            <%= image_tag "spree/backend/assembly-spinner.gif", :style => "display:none", :class => "spinner" %>
            <%= link_to_with_icon 'ok', Spree.t(:update), set_count_admin_product_part_url(@product, part), class: 'set_count_admin_product_part_link btn btn-sm btn-primary', no_text: true %>
            <%= link_to_with_icon 'delete', Spree.t(:remove), remove_admin_product_part_url(@product, part), class: 'remove_admin_product_part_link btn btn-sm btn-danger', no_text: true %>
    	    </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info"><%= Spree.t(:none) %>.</div>
<% end %>

<%= javascript_tag("subscribe_product_part_links();") if request.xhr? %>
